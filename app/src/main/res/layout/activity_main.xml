<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/bright_blue"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_medium"
            android:layout_marginTop="@dimen/margin_from_edge"
            android:layout_marginStart="@dimen/margin_from_edge"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_from_edge">

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/search"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_medium"
            android:textAllCaps="false"
            app:icon="@drawable/button1_lm"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/navy_blue"
            app:cornerRadius="16dp" />

        <Button
            android:id="@+id/media_library_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/media_library"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_medium"
            android:textAllCaps="false"
            app:icon="@drawable/button2_lm"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/navy_blue"
            app:cornerRadius="16dp" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/settings"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_medium"
            android:textAllCaps="false"
            app:icon="@drawable/button3_lm"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/navy_blue"
            app:cornerRadius="16dp" />
    </LinearLayout>

</LinearLayout>