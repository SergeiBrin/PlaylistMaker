<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_56dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="56dp" />

    <ImageButton
        android:id="@+id/arrow_back_media_library"
        android:layout_width="@dimen/margin_48dp"
        android:layout_height="@dimen/margin_48dp"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/album_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="@dimen/margin_24dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end_24dp"
        app:layout_constraintStart_toEndOf="@+id/guideline_start_24dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_56dp"
        app:layout_constraintBottom_toTopOf="@id/track_name"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"/>

    <TextView
        android:id="@+id/track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="?attr/colorSecondary"
        android:textSize="@dimen/text_medium_22sp"
        app:layout_constraintStart_toEndOf="@id/guideline_start_24dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_24dp"
        app:layout_constraintBottom_toTopOf="@id/artist_name"
        tools:text="Yesterday (Remastered) 2009" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="?attr/colorSecondary"
        android:textSize="@dimen/text_medium_14sp"
        app:layout_constraintStart_toEndOf="@id/guideline_start_24dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_24dp"
        app:layout_constraintBottom_toTopOf="@id/play_button"
        android:layout_marginBottom="30dp"
        tools:text="The Beattles" />

    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:background="@drawable/media_library_button"
        android:src="@drawable/add_button"
        app:layout_constraintEnd_toStartOf="@id/play_button"
        app:layout_constraintStart_toEndOf="@id/guideline_start_24dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintBottom_toTopOf="@+id/play_button"
        app:layout_constraintTop_toBottomOf="@id/play_button"
        />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:src="@drawable/play_button"
        app:layout_constraintBottom_toTopOf="@+id/track_time"
        android:layout_marginBottom="@dimen/margin_4dp"
        app:layout_constraintEnd_toStartOf="@id/like_button"
        app:layout_constraintStart_toEndOf="@id/add_button" />

    <ImageButton
        android:id="@+id/like_button"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:background="@drawable/media_library_button"
        android:src="@drawable/like_button"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_24dp"
        app:layout_constraintStart_toEndOf="@id/play_button"
        app:layout_constraintBottom_toTopOf="@+id/play_button"
        app:layout_constraintTop_toBottomOf="@id/play_button" />

    <TextView
        android:id="@+id/track_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/duration"
        tools:text="10:25"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="?attr/colorSecondary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@id/album"
        tools:text="Длительность"
        app:layout_constraintStart_toEndOf="@id/guideline_start_16dp"
        app:layout_constraintEnd_toStartOf="@id/duration_value"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="center_vertical"
        android:textColor="@color/light_gray"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/duration_value"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintBottom_toTopOf="@id/album"
        tools:text="5:35"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_16dp"
        app:layout_constraintStart_toEndOf="@id/duration"
        android:gravity="center_vertical|end"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/album"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@id/year"
        tools:text="Альбом"
        app:layout_constraintStart_toEndOf="@id/guideline_start_16dp"
        app:layout_constraintEnd_toStartOf="@id/duration_value"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="center_vertical"
        android:textColor="@color/light_gray"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/album_value"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintBottom_toTopOf="@id/year"
        tools:text="Yesterday (Remastered 2009)"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_16dp"
        app:layout_constraintStart_toEndOf="@id/duration"
        android:gravity="center_vertical|end"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@+id/genre"
        tools:text="Год"
        app:layout_constraintStart_toEndOf="@id/guideline_start_16dp"
        app:layout_constraintEnd_toStartOf="@id/duration_value"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="center_vertical"
        android:textColor="@color/light_gray"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/year_value"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintBottom_toTopOf="@+id/genre"
        tools:text="1965"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_16dp"
        app:layout_constraintStart_toEndOf="@id/duration"
        android:gravity="center_vertical|end"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@+id/country"
        tools:text="Жанр"
        app:layout_constraintStart_toEndOf="@id/guideline_start_16dp"
        app:layout_constraintEnd_toStartOf="@id/duration_value"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="center_vertical"
        android:textColor="@color/light_gray"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/genre_value"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintBottom_toTopOf="@+id/country"
        tools:text="Рок"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_16dp"
        app:layout_constraintStart_toEndOf="@id/duration"
        android:gravity="center_vertical|end"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/country"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"
        tools:text="Страна"
        app:layout_constraintStart_toEndOf="@id/guideline_start_16dp"
        app:layout_constraintEnd_toStartOf="@id/duration_value"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="center_vertical"
        android:textColor="@color/light_gray"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_16dp"/>

    <TextView
        android:id="@+id/country_value"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_weight="3"
        tools:text="Великобритания"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_16dp"
        app:layout_constraintStart_toEndOf="@id/duration"
        android:gravity="center_vertical|end"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

