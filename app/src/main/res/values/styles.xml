<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HomeScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="cornerRadius">@dimen/button_fillet_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/spacing_16dp</item>
        <item name="iconTint">@color/navy_blue</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    
    <style name="RegularTextOnSettingsScreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/spacing_16dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="IconsOnTheSettingsScreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">@dimen/spacing_16dp</item>
        <item name="android:tint">?attr/iconsOnTheSettingsScreen</item>
    </style>

    <style name="HeaderFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_layout_size_56dp</item>
    </style>
    
    <style name="ArrowBackHeaderIcon">
        <item name="android:layout_width">@dimen/layout_size_48dp</item>
        <item name="android:layout_height">@dimen/layout_size_48dp</item>
        <item name="android:layout_marginStart">@dimen/spacing_4dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_4dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnHeader</item>
    </style>

    <style name="ArtistAndTimeTextForSongList">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorSearchTextSecondary</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
    </style>

    <style name="NameForTrackDataInThePlayer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/layout_size_32dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>

    <style name="TrackDataInThePlayer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/layout_size_32dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>

    <style name="ButtonText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>

    <style name="TabLayout">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="BottomNavigationActive">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="BottomNavigationInactive">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="CreatePlaylistEditText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:color">?attr/colorEditText</item>
        <item name="android:textColorHint">?attr/colorEditText</item>
    </style>

    <style name="CreatePlaylistEditTextLabel">
        <item name="android:layout_marginStart">@dimen/spacing_12dp</item>
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingStart">@dimen/spacing_4dp</item>
        <item name="android:paddingEnd">@dimen/spacing_4dp</item>
        <item name="android:textColor">@color/bright_blue</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="MyPlaylist">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlaylistFragmentBottomSheetText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>