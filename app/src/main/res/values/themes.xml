<resources>
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navy_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorOnHeader">@color/navy_blue</item>

        <!-- Search Screen -->
        <item name="colorSearchForm">@color/very_light_gray</item>
        <item name="colorDataInSearchForm">@color/light_gray</item>
        <item name="colorSearchTextSecondary">@color/light_gray</item>
        <item name="colorSearchIcon">@color/light_gray</item>
        <item name="colorRefreshButton">@color/white</item>
        <item name="colorSwitchThumb">@color/light_gray</item>
        <item name="colorSwitchTrack">@color/very_light_gray</item>

        <item name="iconsOnTheSettingsScreen">@color/very_light_gray</item>

        <!-- Background and icon color. -->
        <item name="themeBackground">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MainScreen" parent="Theme.PlaylistMaker">
        <item name="themeBackground">@color/bright_blue</item>
        <item name="android:statusBarColor">@color/bright_blue</item>
        <item name="android:tint">@color/light_gray</item>
    </style>
</resources>