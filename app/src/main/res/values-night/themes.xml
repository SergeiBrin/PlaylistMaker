<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bright_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/navy_blue</item>

        <item name="colorOnHeader">@color/white</item>

        <!-- Search Screen -->
        <item name="colorSearchForm">@color/white</item>
        <item name="colorDataInSearchForm">@color/navy_blue</item>
        <item name="colorSearchTextSecondary">@color/white</item>
        <item name="colorSearchIcon">@color/white</item>
        <item name="colorRefreshButton">@color/navy_blue</item>
        <item name="colorSwitchThumb">@color/bright_blue</item>
        <item name="colorSwitchTrack">@color/light_blue</item>

        <item name="iconsOnTheSettingsScreen">@color/white</item>

        <!-- CreatePlaylist Screen -->
        <item name="colorEditTextStrokeDefault">@color/white</item>
        <item name="colorEditTextStrokeFocused">@color/white</item>
        <item name="colorEditText">@color/white</item>


        <!-- Background and icon color. -->
        <item name="themeBackground">@color/navy_blue</item>
        <item name="bottomSheetRectangle">@color/white</item>
        <item name="android:textColorHint">@color/navy_blue</item>

        <item name="android:statusBarColor">@color/navy_blue</item>
        <!-- Customize your theme here. -->
    </style>

</resources>